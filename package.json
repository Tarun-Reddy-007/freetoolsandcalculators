{
  "name": "freetoolsandcalculators",
  "version": "1.0.0",
  "description": "Free Online Tools & Calculators",
  "scripts": {
    "minify": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o index.min.css index.css && cleancss -o HomePage.min.css HomePage.css",
    "minify:js": "terser index.js -o index.min.js -c -m",
    "build": "npm run minify",
    "watch": "npm-run-all --parallel watch:css watch:js",
    "watch:css": "chokidar 'index.css' -c 'npm run minify:css'",
    "watch:js": "chokidar 'index.js' -c 'npm run minify:js'"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "terser": "^5.26.0",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5"
  }
}
